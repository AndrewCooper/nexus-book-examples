<ivysettings>
   <settings defaultResolver="nexus"/>
    <credentials host="localhost" 
                 realm="Sonatype Nexus Repository Manager" 
                 username="admin" passwd="admin123"/>
    <publications>
        <artifact name="another-project" type="jar"/>
    </publications>
    <property name="nexus-public" value="http://localhost:8081/nexus/content/groups/public"/>
    <property name="nexus-stage" value="http://localhost:8081/nexus/service/local/staging/deploy/maven2"/>
    <resolvers>
      <ibiblio name="nexus" m2compatible="true" root="${nexus-public}"/>
      <ibiblio name="nexus-stage" m2compatible="true" root="${nexus-stage}"/>
    </resolvers>
</ivysettings>